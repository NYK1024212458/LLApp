<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:openxu="http://schemas.android.com/apk/res-auto"
    android:id="@+id/find_head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <com.android.core.widget.CustomViewpager
                android:id="@+id/viewpager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:background="@color/abc_tab_text_normal" />

        </android.support.design.widget.CollapsingToolbarLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/huiyuan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="70dp">

                <TextView
                    android:id="@+id/huiyuankecheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="会员课程"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/huiyuankecheng"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:text="50000好课爽翻天"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/huiyuankecheng"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/help"/>

                <View
                    android:layout_alignParentRight="true"
                    android:layout_width="0.5dp"
                    android:layout_height="70dp"
                    android:background="@color/line"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/taocan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/chaozhitaocan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="超值套餐"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chaozhitaocan"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="15dp"
                    android:textSize="12sp"
                    android:text="套套优惠任你买"/>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/chaozhitaocan"
                    android:layout_marginLeft="30dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/help"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/youxiu"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/youxiujiangshi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="优秀讲师"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/youxiujiangshi"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="讲师给力任你挑"/>

                <View
                    android:layout_alignParentRight="true"
                    android:layout_width="0.5dp"
                    android:layout_height="60dp"
                    android:background="@color/line"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/meiri"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/meirihaoli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="每日好礼"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/meirihaoli"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="日日好礼不要停"/>

                <View
                    android:layout_alignParentRight="true"
                    android:layout_width="0.5dp"
                    android:layout_height="60dp"
                    android:background="@color/line"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/CTO"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/toutiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:text="51CTO头条"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toutiao"
                    android:layout_margin="5dp"
                    android:textSize="12sp"
                    android:text="条条惊喜满足你"/>

            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/help"/>

            <com.umeng.soexample.custom.LimitScrollerView
                android:id="@+id/limitScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                openxu:limit="1"
                openxu:durationTime="2000"
                openxu:periodTime="2000"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="畅销课秒杀"
                android:textColor="@color/username0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="14点场" />

            <LinearLayout
                android:id="@+id/timer"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/timer_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:textColor="@color/username0"
                android:textSize="12sp"
                android:text="更多超值等你来秒杀"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="IT充电区"/>

    </android.support.design.widget.AppBarLayout>


</android.support.design.widget.CoordinatorLayout>