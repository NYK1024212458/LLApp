        <RelativeLayout
            android:id="@+id/sl_qq"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/qq_img"
                android:src="@mipmap/qq"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qq_img"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:text="@string/QQ_text"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="@color/text"
                android:id="@+id/textView4" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sl_qq_space"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/qq_space_img"
                android:src="@mipmap/qq_space"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qq_space_img"
                android:gravity="center_horizontal"
                android:text="@string/QQ_space"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="@color/text"
                android:id="@+id/qq_space_text" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sl_sms"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/sms_img"
                android:src="@mipmap/sms"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sms_img"
                android:gravity="center_horizontal"
                android:text="@string/sms"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="@color/text"
                android:id="@+id/sms_text" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
