</RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:baselineAligned="false">

        <RelativeLayout
            android:id="@+id/sl_weixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/wechat_img"
                android:src="@mipmap/wechat"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/wechat_img"
                android:gravity="center_horizontal"
                android:text="@string/wechat_friends"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="@color/text"
                android:id="@+id/textView" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sl_weixin_space"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/wechat_circle"
                android:id="@+id/wechat_space_img" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center_horizontal"
                android:text="@string/wechat_circle"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="@color/text"
                android:layout_below="@+id/wechat_space_img"
                android:id="@+id/textView2" />
        </RelativeLayout>

      <!--  <RelativeLayout
            android:id="@+id/sl_weibo"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/weibo_img"
                android:src="@mipmap/weibo"/>

            <TextView
