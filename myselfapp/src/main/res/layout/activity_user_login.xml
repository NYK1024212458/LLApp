<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/portrait_bg"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <!--<include android:id="@+id/login_tool"-->
            <!--layout="@layout/toolbar_layout"/>-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/login_tool"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/portrait"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_below="@+id/login_tool"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:src="@mipmap/touxiang" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/portrait_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@color/background_user">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/shape_wihte_frame">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:padding="1dp"
                    android:text="手机号"
                    android:textSize="11sp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="#EEEFFF" />

                <EditText
                    android:id="@+id/phonenumber"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/view1"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:padding="1dp"
                    android:textSize="12sp">

                </EditText>
                <!--<requestFocus />-->

                <ImageView
                    android:id="@+id/del_phonenumber"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/text_del"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@color/background_user">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape_wihte_frame">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="1dp"
                    android:text="密码"
                    android:textSize="11sp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:background="#EEEFFF" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/view2"
                    android:background="@drawable/transparent"
                    android:ems="19"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:padding="1dp"
                    android:textSize="12sp">

                </EditText>

                <ImageView
                    android:id="@+id/del_password"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/text_del"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>

        <!--<Button-->
        <!--android:id="@+id/loginButton"-->
        <!--android:layout_width="160dp"-->
        <!--android:layout_height="40dp"-->
        <!--android:layout_alignLeft="@+id/relativeLayout2"-->
        <!--android:layout_alignRight="@+id/relativeLayout2"-->
        <!--android:layout_below="@+id/relativeLayout2"-->
        <!--android:layout_marginTop="35dp"-->
        <!--android:background="@drawable/login_button_selector"-->
        <!--android:padding="1dp"-->
        <!--android:text="登录"-->
        <!--android:textColor="@color/abc_white"-->
        <!--android:textSize="21sp" />-->
        <com.umeng.soexample.custom.StateButton
            android:id="@+id/loginButton"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/relativeLayout2"
            android:layout_alignRight="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout2"
            android:layout_marginTop="35dp"
            android:padding="1dp"
            android:text="登录"
            android:textColor="@color/abc_white"
            android:textSize="21sp"
            app:normalBackgroundColor="@color/success_stroke_color"
            app:pressedBackgroundColor="@color/username4"
            app:radius="5dp" />

        <RelativeLayout
            android:id="@+id/relativeLayoutaotu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loginButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="1dp">

            <TextView
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:text="游客登录" />

            <!--<TextView-->
                <!--android:id="@+id/qq"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_below="@id/wechat"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:text="qq登录" />-->

            <!--<TextView-->
                <!--android:id="@+id/sina"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_below="@id/qq"-->
                <!--android:text="微博登录" />-->

        </RelativeLayout>


    </RelativeLayout>

</ScrollView>