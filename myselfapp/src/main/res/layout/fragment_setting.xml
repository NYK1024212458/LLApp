<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">

    <include
        android:id="@+id/set_toolbar"
        layout="@layout/toolbar_layout" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_below="@id/appbar_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/abc_white"
        android:orientation="vertical">

        <com.umeng.soexample.custom.TextDrawable
            android:id="@+id/rl_language"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/language"
            android:textColor="@color/text"
            android:textSize="16sp"
            app:leftDrawable="@mipmap/language"
            app:rightDrawable="@mipmap/coming"
            app:rightDrawableHeight="12dp"
            app:rightDrawableWidth="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/line" />

        <com.umeng.soexample.custom.TextDrawable
            android:id="@+id/rl_app_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/update"
            android:textColor="@color/text"
            android:textSize="16sp"
            app:leftDrawable="@mipmap/update"
            app:rightDrawable="@mipmap/coming"
            app:rightDrawableHeight="12dp"
            app:rightDrawableWidth="8dp" />

        <View
            android:layout_width="match_parent"
